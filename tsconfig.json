{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["content/.vitepress/theme"],
  "exclude": ["node_modules", "types"]
}
